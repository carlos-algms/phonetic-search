{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "jasmine": true
  },
  "extends": "airbnb/base",
  "globals": {
    "angular": true
  },
  "rules": {
    // disable requiring trailing commas because it might be nice to revert to
    // being JSON at some point, and I don't want to make big changes now.
    "comma-dangle": 0,
    "no-use-before-define": ["error", { "functions": false, "classes": true }]
  }
}
